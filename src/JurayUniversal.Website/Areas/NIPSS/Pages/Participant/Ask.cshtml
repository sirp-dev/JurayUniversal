@page
@model JurayUniversal.Website.Areas.NIPSS.Pages.Participant.AskModel

@{
    ViewData["Title"] = "Ask";
}

<h1>Ask</h1>

<h4>QuestionAndAnswer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionAndAnswer.UserId" class="control-label"></label>
                <select asp-for="QuestionAndAnswer.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAndAnswer.Question" class="control-label"></label>
                <input asp-for="QuestionAndAnswer.Question" class="form-control" />
                <span asp-validation-for="QuestionAndAnswer.Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAndAnswer.Answer" class="control-label"></label>
                <input asp-for="QuestionAndAnswer.Answer" class="form-control" />
                <span asp-validation-for="QuestionAndAnswer.Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAndAnswer.ModeratorId" class="control-label"></label>
                <select asp-for="QuestionAndAnswer.ModeratorId" class ="form-control" asp-items="ViewBag.ModeratorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
