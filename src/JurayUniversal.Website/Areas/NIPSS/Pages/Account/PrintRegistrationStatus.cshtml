@page
@model JurayUniversal.Website.Areas.NIPSS.Pages.Account.PrintRegistrationStatusModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="callout callout-info">
            <h5><i class="fas fa-info"></i> Note:</h5>
            Print these Document and proceed for you Accomodation Allocation
        </div>


        <!-- Main content -->
        <div class="invoice p-3 mb-3">
            <!-- title row -->
            
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <div style="padding:5px;background-color:white;">
                        <img src="@Model.UserDatas.PassportFilePathUrl" style="max-height:120px;" />
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <div style="padding:5px;background-color:white;">
                        <img class="" src="data:image/jpg;base64,@(Convert.ToBase64String(Model.BarcodeImage))" style="max-height:120px;" />

                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <dl class="row">


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.FullnameX)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.FullnameX)
                    </dd>


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.PhoneNumber)
                    </dd>
 

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Email)
                    </dd>

                    @if (Model.Participant != null)
                    {
                        <dt class="col-sm-2">
                            Course
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Participant.Course.CourseCategory.Name (@Model.Participant.Course.CourseCategory.Abbreviation @Model.Participant.Course.SecNumber, @Model.Participant.Course.Year.ToString("yyyy"))
                        </dd>
                        <dt class="col-sm-2">
                            Registration Number
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Participant.IdNumber)
                        </dd>
                        <dt class="col-sm-2">
                            Accomodation
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Participant.Accomodation != null)
                            {
                                @Model.Participant.Accomodation.Name
                            }
                            else
                            {
                                <span>Not Assigned Yet</span>
                            }
                        </dd>
                    }
</dl>
                    <!-- /.col -->
</div>
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">
                    <p class="lead">INSTRUCTIONS</p>
                    
                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                        write instructions here
                    </p>
                </div>
                <!-- /.col -->
                 
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- this row will not appear when printing -->
            <div class="row no-print">
                <div class="col-12">
                    <a asp-page="./PrintStatus" rel="noopener" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                     
                </div>
            </div>
        </div>
        <!-- /.invoice -->
    </div><!-- /.col -->
</div><!-- /.row -->