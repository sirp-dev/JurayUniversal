                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <span>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </span>

                                                            </div>

                                                        }
                                                    </div>
                                                }



                                                @if (item.Title.ToUpper().Contains("SKILLS"))
                                                {
                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <span>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

