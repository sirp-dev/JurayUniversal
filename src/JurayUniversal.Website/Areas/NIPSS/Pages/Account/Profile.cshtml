            </dd>*@

                                </dl>
                            <div>
                                @if (Model.AdditionalProfile.Count() > 0)
                                {

                                    <h4>Additional Information</h4>
                                    <table class="table table-bordered">
                                        @foreach (var item in Model.AdditionalProfile)
                                        {
                                            <thead>
                                                <tr>
                                                    <th>@Html.DisplayFor(model => item.Title)</th>
                                                    <td>@Html.DisplayFor(model => item.Description)</td>
                                                </tr>
                                            </thead>

                                        }
                                    </table>
                                }
                            </div>
                            <div>
                                @foreach (var item in Model.ProfileCategories)
                                {
                                    <div class="daiv" style="margin-bottom:20px;">
                                        <h4>@item.Title</h4>
                                        <div>
                                            @foreach (var list in item.ProfileCategoryLists)
                                            {


                                                @if (item.Title.ToUpper().Contains("EDUCATION"))
                                                {
                                                    <div class="secdaiv">

                                                        @if (!String.IsNullOrEmpty(list.Qualification))
                                                        {
                                                            <div>
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.FieldOfStudy))
                                                                    {
                                                                        @list.FieldOfStudy

                                                                    }

                                                                </strong>
                                                                <br />
                                                                <strong>

                                                                    @if (!String.IsNullOrEmpty(list.Qualification))
                                                                    {
                                                                        @list.Qualification

                                                                    }
                                                                </strong> <span>
                                                                    @if (!String.IsNullOrEmpty(list.StartDate))
                                                                    {

                                                                        <span>
                                                                            @list.StartDate
                                                                        </span>

                                                                    } -  @if (list.Currently == false)
                                                                    {
                                                                        @if (!String.IsNullOrEmpty(list.EndDate))
                                                                        {

                                                                            @list.EndDate

                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <text>Current</text>

                                                                    }
                                                                </span>
                                                                <br />
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </strong> @if (!String.IsNullOrEmpty(list.City))
                                                                {
                                                                    <span>
                                                                        - @list.City
                                                                    </span>

                                                                }
                                                            </div>

                                                        }

                                                    </div>}


                                                @if (item.Title.ToUpper().Contains("EXPERIENCE"))
                                                {
                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </strong> <span>
                                                                    @if (!String.IsNullOrEmpty(list.StartDate))
                                                                    {

                                                                        @list.StartDate

                                                                    } @if (list.Currently == false)
                                                                    {
                                                                        @if (!String.IsNullOrEmpty(list.EndDate))
                                                                        {

                                                                            <text> -</text> @list.EndDate

                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <text>Current</text>

                                                                    }
                                                                </span>
                                                                <br />
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Employer))
                                                                    {

                                                                        @list.Employer

                                                                    }
                                                                </strong> @if (!String.IsNullOrEmpty(list.City))
                                                                {
                                                                    <span>
                                                                        - @list.City
                                                                    </span>

                                                                }
                                                                <br />
                                                                @if (!String.IsNullOrEmpty(list.Description))
                                                                {
                                                                    <span>
                                                                        @Html.Raw(list.Description)
                                                                    </span>

                                                                }
                                                            </div>

                                                        }
                                                    </div>
                                                }


                                                @if (item.Title.ToUpper().Contains("CERTIFICATIONS"))
                                                {
                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </strong> <span>
                                                                    @if (!String.IsNullOrEmpty(list.StartDate))
                                                                    {

                                                                        <span>- @list.StartDate</span>

                                                                    }
                                                                </span>

                                                            </div>

                                                        }
                                                    </div>
                                                }


                                                @if (item.Title.ToUpper().Contains("AWARDS"))
