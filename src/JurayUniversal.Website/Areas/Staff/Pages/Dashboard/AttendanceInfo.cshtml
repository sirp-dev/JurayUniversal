@page
@model JurayUniversal.Web.Areas.Staff.Pages.Dashboard.AttendanceInfoModel

@{
    ViewData["Title"] = "AttendanceInfo";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">ATTENDANCE INFORMATION</h6>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <td>
                                        @Model.Attendance.User.GetFullName()
                                    </td>
                                </tr>

                                <tr>
                                    <th>
                                        Arrival Time
                                    </th>
                                    <td>
                                        @if (Model.Attendance.StartTime != null)
                                        {
                                            @Model.Attendance.StartTime.Value.ToString("hh:mm tt")
                                            <span class="btn btn-success btn-xs">
                                                @Html.DisplayFor(modelItem => Model.Attendance.ArivalPeriodStatus)
                                            </span>
                                        }
                                        </td>
                                </tr>
                                <tr>
                                    <th>
                                        Close Time
                                    </th>
                                    <td>
                                        @if (Model.Attendance.CloseTime != null)
                                        {
                                            @Model.Attendance.CloseTime.Value.ToString("hh:mm tt")
                                            <span class="btn btn-success btn-xs">
                                                @Html.DisplayFor(modelItem => Model.Attendance.ClosePeriodStatus)
                                            </span>
                                        }
                                        </td>
                                </tr>

                                <tr>
                                    <th>
                                        Note
                                    </th>
                                    <td>
                                        @Model.Attendance.Note

                                        </td>
                                </tr>

                                <tr>
                                    <th>
                                        Status
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.Attendance.AttendanceStatus)
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
 
            </div>
        </div>
    </div>
</div>