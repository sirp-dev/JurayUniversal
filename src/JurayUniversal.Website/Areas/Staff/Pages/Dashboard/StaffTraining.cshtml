@page
@model JurayUniversal.Web.Areas.Staff.Pages.Dashboard.StaffTrainingModel

@{
    ViewData["Title"] = "StaffTraining";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">TRAINING FOR @TempData["title"]</h6>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="">
                                <div class="row">
                                    <div class="col-md-2" style="text-align:center;margin:0 auto !important">
                                        <h6>
                                            <span style="font-weight:800;"> @Model.Title</span>
                                        </h6>
                                    </div>
                                    <div class="col-md-4" style="text-align:center;margin:0 auto !important">
                                        <form method="get">
                                            <div class="input-group input-group-sm" style="margin-bottom:7px;">
                                                <input type="date" name="searchdate" class="form-control" placeholder="@TempData["date"]">
                                                <span class="input-group-btn">
                                                    <button type="submit" class="btn btn-success btn-flat">Search</button>
                                                </span>
                                            </div>
                                        </form>

                                    </div>

                                </div>


                                <div class="table-responsive">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    S/N
                                                </th>
                                                <th>
                                                    DATE
                                                </th>
                                                <th>
                                                    TOPIC
                                                </th>
                                                <th>
                                                    MODERATOR
                                                </th>
                                                <th>
                                                    TRAINNER
                                                </th>
                                                <th>
                                                    START TIME
                                                </th>
                                                <th>
                                                    STATUS
                                                </th>

                                            </tr>
                                        </thead>
                                        @{
                                            int sn = 0;
                                        }
                                        <tbody>
                                            @foreach (var item in Model.Training)
                                            {
                                                <tr>
                                                    <td>
                                                        @{
                                                            sn++;
                                                        }
                                                        @sn
                                                    </td>
                                                    <td>
                                                        @item.Date.ToString("ddd dd, MMM, yyyy")
                                                    </td>
                                                    <td>
                                                        <a asp-page="./TrainingDetails" asp-route-id="@item.Id">

                                                            @Html.DisplayFor(modelItem => item.Topic)
                                                        </a>
                                                    </td>
                                                    <td>
                                                        Fullname
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Trainner.GetFullName())
                                                    </td>
                                                    <td>
                                                        @if (item.StartTime != null)
                                                        {
                                                            <span>@item.StartTime.Value.ToString("hh:mm tt")-</span>
                                                        }
                                                        else
                                                        {
                                                            <span>--:-- -- -</span>
                                                        }
                                                        @if (item.StartTime != null)
                                                        {
                                                            <span>@item.CloseTime.Value.ToString("hh:mm tt")</span>
                                                        }
                                                        else
                                                        {
                                                            <span>--:-- -- -</span>
                                                        }


                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TrainingStatus)
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>