@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.SettingPage.IAccomodation.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD NEW ACCOMODATION</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Accomodation.Name" class="control-label"></label>
                        <input asp-for="Accomodation.Name" class="form-control" />
                        <span asp-validation-for="Accomodation.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Accomodation.Disable" /> @Html.DisplayNameFor(model => model.Accomodation.Disable)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Accomodation.Description" class="control-label"></label>
                        <input asp-for="Accomodation.Description" class="form-control" />
                        <span asp-validation-for="Accomodation.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
