@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.EVP.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE EVALUATION QUESTION</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EvaluationQuestion.Id" />
                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.Question" class="control-label"></label>
                        <textarea asp-for="EvaluationQuestion.Question" class="form-control"></textarea>
                        <span asp-validation-for="EvaluationQuestion.Question" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.AbbreviatedQuestion" class="control-label"></label>
                        <input asp-for="EvaluationQuestion.AbbreviatedQuestion" class="form-control" />
                        <span asp-validation-for="EvaluationQuestion.AbbreviatedQuestion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.Publish" class="control-label"></label>
                        <input asp-for="EvaluationQuestion.Publish" />
                        <span asp-validation-for="EvaluationQuestion.Publish" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
