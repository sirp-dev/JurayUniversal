@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.NutriValution.Questions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE NUTRITION LIST</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Are you sure you want to delete this?</h3>
                <div> 
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NutritionCategoryList.Question)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NutritionCategoryList.Question)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NutritionCategoryList.NutritionCategory)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NutritionCategoryList.NutritionCategory.Name)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="NutritionCategoryList.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <a asp-page="./Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
