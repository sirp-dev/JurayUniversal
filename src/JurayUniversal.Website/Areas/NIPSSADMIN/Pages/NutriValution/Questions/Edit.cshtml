@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.NutriValution.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE NUTRITION LIST</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="NutritionCategoryList.Id" />
                    <input type="hidden" asp-for="NutritionCategoryList.NutritionCategoryId" />
                    <div class="form-group">
                        <label asp-for="NutritionCategoryList.Question" class="control-label"></label>
                        <input asp-for="NutritionCategoryList.Question" class="form-control" />
                        <span asp-validation-for="NutritionCategoryList.Question" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NutritionCategoryList.ResultType" class="control-label"></label>
                        @Html.DropDownListFor(model => model.NutritionCategoryList.ResultType, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.ResultType))), new { @class = "form-control" })
                        <span asp-validation-for="NutritionCategoryList.ResultType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="/NutriValution/Category/Details" asp-route-id="@Model.NutritionCategoryList.NutritionCategoryId" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
