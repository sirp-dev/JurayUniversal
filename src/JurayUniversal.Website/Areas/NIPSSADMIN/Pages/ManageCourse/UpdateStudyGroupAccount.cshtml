@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.ManageCourse.UpdateStudyGroupAccountModel

@{
    ViewData["Title"] = "UpdateStudyGroupAccount";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            UPDATE POSITION FOR @if (Model.StudyGroup.User != null)
            {
                <span>@Model.StudyGroup.User.FullnameX</span>
            }
            ON @Model.StudyGroup.StudyGroupCategory.Title
        </h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StudyGroup.Id" />

                    <div class="form-group">
                        <label asp-for="StudyGroup.Position" class="control-label"></label>
                        <input asp-for="StudyGroup.Position" class="form-control" />
                        <span asp-validation-for="StudyGroup.Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-page="./StudyGroups" asp-route-id="@Model.StudyGroup.StudyGroupCategoryId" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
