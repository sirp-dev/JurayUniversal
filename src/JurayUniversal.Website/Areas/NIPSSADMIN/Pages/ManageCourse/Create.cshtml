            <label asp-for="Course.CourseStatus" class="control-label"></label>
            @Html.DropDownListFor(model => model.Course.CourseStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.CourseStatus))), new { @class = "form-control" })
            <span asp-validation-for="Course.CourseStatus" class="text-danger"></span>
        </div>*@
                    <div class="form-group">
                        <label asp-for="Course.Theme" class="control-label"></label>
                        <textarea asp-for="Course.Theme" class="form-control"></textarea>
                        <span asp-validation-for="Course.Theme" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
