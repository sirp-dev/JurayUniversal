@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.ManageCourse.UpdateStudyGroupCategoryModel

@{
    ViewData["Title"] = "UpdateStudyGroupCategory";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE STUDY GROUP</h3>

        <a asp-page="./Details" asp-route-id="@Model.StudyGroupCategory.CourseId" class="btn bg-gradient-primary btn-sm" style="float:right;">Back</a>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StudyGroupCategory.Id" />
                    <input type="hidden" asp-for="StudyGroupCategory.CourseId" />
                    <div class="form-group">
                        <label asp-for="StudyGroupCategory.Title" class="control-label"></label>
                        <input asp-for="StudyGroupCategory.Title" class="form-control" />
                        <span asp-validation-for="StudyGroupCategory.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudyGroupCategory.Slogan" class="control-label"></label>
                        <textarea asp-for="StudyGroupCategory.Slogan" class="form-control"></textarea>
                        <span asp-validation-for="StudyGroupCategory.Slogan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudyGroupCategory.GroupRules" class="control-label"></label>
                        <textarea asp-for="StudyGroupCategory.GroupRules" class="form-control"></textarea>
                        <span asp-validation-for="StudyGroupCategory.GroupRules" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
