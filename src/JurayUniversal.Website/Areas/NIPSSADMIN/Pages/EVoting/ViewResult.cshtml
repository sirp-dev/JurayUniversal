@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.EVoting.ViewResultModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">E-VOTING RESULT @Model.VoteCategory.Title.ToUpper() FOR @Model.VoteCategory.Evoting.Title</h3>

    </div>
    <!-- /.card-header -->


</div>

<div class="card">
    
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">


                @foreach (var cnd in Model.VoteCategory.VoteCondidates)
                {
                    <div class="card-header bg-success">
                        <h3 class="card-title" style="font-weight:900;font-size:18px;">@cnd.Title</h3>

                    </div>



                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <dl>
                                    <dt class="col-md-5">
                                        
                                            <div class="card">
                                                <div class="card-header">
                                                    @if (cnd.Candidate != null)
                                                    {
                                                        <h4 class="text-center" style="font-weight:900;">@cnd.Candidate.FullnameX</h4>


                                                    }
                                                    else
                                                    {
                                                        <h4 class="text-center" style="font-weight:900;">@cnd.Title</h4>


                                                    }
                                                </div>
                                                <div class="card-body">
                                                    <div class="" style="text-align:center;margin:0 auto;">
                                                        <a href="@cnd.CandidateImageUrl">
                                                            <img src="@cnd.CandidateImageUrl" class="img-fluid voting-img" style="text-align: center; margin: 0 auto;height:300px;" />
                                                        </a>
                                                    </div>
                                                    <div>
                                                        <p class="text-justify" style="height:150px;">
                                                            @cnd.ShortProfile
                                                        </p>
                                                        <div class="row">
                                                            <div class="col-md-12 bg-primary">
                                                                <a href="#" class="btn btn-primary" style="width:100%" data-toggle="modal" data-target="#manifestoModal_@cnd.Id">Manifesto</a>

                                                            </div>
                                                            
                                                                <div class="col-md-6 bg-primary">
                                                                    <h4>
                                                                        Position: (
                                                                        @if (cnd.ResultPosition == 0)
                                                                        {


                                                                            <span>On Going</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span>@cnd.ResultPosition</span>
                                                                        }
                                                                        )
                                                                    </h4>
                                                                </div>
                                                                <div class="col-md-6 bg-success">
                                                                    <h4>Votes: (@cnd.UserVote.Count())</h4>
                                                                </div>
                                                             
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        
                                    </dt>
                                    <dd>
                                        @{ int sn = 0;}
                                        @foreach(var list in cnd.UserVote)
                {
                    <span class="btn btn-success" style="margin:2px;">
                        @{ sn++;}
                        (@sn) Voted
                    </span>
                }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


