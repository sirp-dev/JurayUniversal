@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.EVoting.AddCandidateModel

@{
    ViewData["Title"] = "Add Candidate";
}
<div class="card card-default">
    <div class="card-header">
        <h3>NEW CANDIDTATE (@Model.Title.ToUpper())</h3>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="VotingId" />
                    <input type="hidden" asp-for="VoteCondidate.VoteCategoryId" value="@Model.VotingCategoryId"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="VoteCondidate.CandidateId" class="control-label">Select from Participants</label>
                        <select asp-for="VoteCondidate.CandidateId" asp-items="ViewBag.CandidateId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary">
                            <option value="">Select</option>

                        </select>
                    </div>
                    <h4>OR</h4>

                    <div class="form-group">
                        <label asp-for="VoteCondidate.Title" class="control-label"></label>
                        <input asp-for="VoteCondidate.Title" class="form-control" />
                        <span asp-validation-for="VoteCondidate.Title" class="text-danger"></span>
                    </div>
                    

                    <div class="form-group">
                        <label asp-for="VoteCondidate.ShortProfile" class="control-label"></label>
                        <textarea asp-for="VoteCondidate.ShortProfile" class="form-control" required="required" maxlength="500"></textarea>
                        <span asp-validation-for="VoteCondidate.ShortProfile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VoteCondidate.Manifesto" class="control-label"></label>
                        <textarea asp-for="VoteCondidate.Manifesto" class="form-control summernote" required="required"></textarea>
                        <span asp-validation-for="VoteCondidate.Manifesto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Banner, Campain Image etc</label><br />
                        <input type="file" class="control-label" asp-for="imagefile" accept="image/*" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Details" asp-route-id="@Model.VotingId" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


    </div>
    <div class="card-footer">
    </div>
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
