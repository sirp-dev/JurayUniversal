@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.TimeTablePage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS TIMESTABLE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TimeTable.EventDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TimeTable.EventDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TimeTable.EventTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TimeTable.EventTime)
                    </dd>


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TimeTable.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TimeTable.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TimeTable.Content)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TimeTable.Content)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TimeTable.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.TimeTable.Note)
                    </dd>

                </dl>
            </div>

        </div>
    </div>

</div>
<div class="card card-default">

    <div class="card-header">
        <h3 class="card-title">Moderators</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Moderator</th>
                            <th>Position</th>
                            <th></th>
                        </tr>
                    </thead>
                    @{ int sn = 0;}
                    <tbody>
                        @foreach (var item in Model.TimeTable.Moderators)
                        {
                            <tr>
                                <td>
                                    @{ sn++;}
                                    @sn
                                </td>
                                <td>
                                    @if (item.User != null)
                                    {
                                        <span>@item.User.FullnameX</span>
                                    }
                                    else
                                    {
                                        <span>@item.Fullname</span>
                                    }
                                </td>
                                <td>
                                    @item.Position
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="card card-default">

    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-page-handler="NewModerator">
                    <input type="hidden" asp-for="TimeTable.Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">CHECK IF THE MODERATORS ARE IN THIS LIST BELOW.</label>

                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="ModeratorId" class="control-label">Existing Moderators</label>
                        <select asp-for="ModeratorId" asp-items="ViewBag.ModeratorId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary">
                            <option value="">Select Moderators</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add Moderator" class="btn btn-primary" />

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
</div>
<div class="card card-default">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-page-handler="UpdateModerator">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TimeTable.Id" />

                    <div class="form-group">
                        <label class="control-label">IF NOT FOUND ABOVE REGISTER THE MODERATOR.</label>

                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="NewUserId" class="control-label">Check if the moderator is a Staff, DS or Management Staff</label>
                        <select asp-for="NewUserId" asp-items="ViewBag.UserId" class="form-control select2 select2-primary js-example-basic-single" data-dropdown-css-class="select2-primary">
                            <option value="">Select Staff/DS/Mgt Staff</option>

                        </select>
                    </div>
                    <h2 class="text-center">OR</h2>
                    <div class="form-group">
                        <label asp-for="Fullname" class="control-label">Enter the Name if He/She is an External Moderator</label>
                        <input asp-for="Fullname" class="form-control uppercase-text" />
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label">Positions</label>
                        <input asp-for="Position" class="form-control uppercase-text" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Moderator" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- /.row -->
</div>
<!-- /.card-body -->
<div class="card-footer">
</div>
   
