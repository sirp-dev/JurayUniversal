@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.Users.ReplaceParticipantModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">REPLACE @Model.UserData.FullnameX WITH A NEW PARTICIPANT</h3>

    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ParticipantList.User.FullnameX)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ParticipantList.User.FullnameX)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ParticipantList.User.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ParticipantList.User.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ParticipantList.User.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ParticipantList.User.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        Reg. No.
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ParticipantList.IdNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ParticipantList.User.Role)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ParticipantList.User.Role)
                    </dd>
                    <dt class="col-sm-2">
                        Registered Date
                    </dt>
                    <dd class="col-sm-10">
                        @Model.ParticipantList.User.Date.ToString("dd MMM, yyyy")
                    </dd>
                    <dt class="col-sm-2">
                        Course
                    </dt>
                    <dd class="col-sm-10">
                        @Model.ParticipantList.Course.CourseCategory.Name (@Model.ParticipantList.Course.CourseCategory.Abbreviation @Model.ParticipantList.Course.SecNumber, @Model.ParticipantList.Course.Year.ToString("yyyy"))
                    </dd>
                    <dt class="col-sm-2">
                        Theme
                    </dt>
                    <dd class="col-sm-10">
                        @Model.ParticipantList.Course.Theme
                    </dd>
                    
                </dl>
            </div>

        </div>
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Title" class="control-label"></label>
                        <select asp-for="Input.Title" class="form-control" asp-items="ViewBag.NameTitle">
                            <option value="">Choose</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label asp-for="Input.FirstName" class="control-label"></label>
                        <input asp-for="Input.FirstName" class="form-control" id="upper1" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.MiddleName" class="control-label"></label>
                        <input asp-for="Input.MiddleName" class="form-control" id="upper2" oninput="myUppercase('upper2')" />
                        <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.LastName" class="control-label"></label>
                        <input asp-for="Input.LastName" class="form-control" id="upper3" oninput="myUppercase('upper3')" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="control-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="control-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Replace" class="btn btn-primary" />
                        <a asp-page="/Users/Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back to Users</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>