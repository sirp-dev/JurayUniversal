@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.Users.RemoveUserModel

@{
    ViewData["Title"] = "RemoveUser";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE ACCOUNT</h3>
      
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.FullnameX)
                    </dd>
                    
                </dl>
            </div>

        </div>
    </div>
</div>
<div>
    <form method="post">
        <input type="hidden" asp-for="UserDatas.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
     </form>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
