@page
@model JurayUniversal.Website.Areas.NIPSSADMIN.Pages.Users.UpdateModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE USER</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserDatas.Id" />
                    <input type="hidden" asp-for="UserDatas.UserCategoryId" />


                    <div class="form-group">
                        <label asp-for="UserDatas.FirstName" class="control-label"></label>
                        <input asp-for="UserDatas.FirstName" class="form-control" />
                        <span asp-validation-for="UserDatas.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDatas.MiddleName" class="control-label"></label>
                        <input asp-for="UserDatas.LastName" class="form-control" />
                        <span asp-validation-for="UserDatas.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserDatas.LastName" class="control-label"></label>
                        <input asp-for="UserDatas.LastName" class="form-control" />
                        <span asp-validation-for="UserDatas.LastName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="UserDatas.PhoneNumber" class="control-label"></label>
                        <input asp-for="UserDatas.PhoneNumber" class="form-control" />
                        <span asp-validation-for="UserDatas.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDatas.PositionOrRank" class="control-label"></label>
                        <input asp-for="UserDatas.PositionOrRank" class="form-control" />
                        <span asp-validation-for="UserDatas.PositionOrRank" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="UserDatas.UserStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.UserDatas.UserStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.UserStatus))), new { @class = "form-control" })
                        <span asp-validation-for="UserDatas.UserStatus" class="text-danger"></span>
                    </div>

                    @if (Model.ParticipantList != null)
                    {
                        <div class="form-group">
                            <label class="control-label">Update Paticipant Course Status</label>
                            
                        </div>

                        <div class="form-group">
                            <label asp-for="ParticipantList.ParticipantStatus" class="control-label"></label>
                            @Html.DropDownListFor(model => model.ParticipantList.ParticipantStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.ParticipantStatus))), new { @class = "form-control" })
                            <span asp-validation-for="ParticipantList.ParticipantStatus" class="text-danger"></span>
                        </div>

                    }


                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
