@page
@model JurayUniversal.Website.Areas.Content.Pages.IPages.Main.IndexModel

@{
    ViewData["Title"] = "PAGE Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">PAGES LIST</h3>


        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>

    <div class="card-header">
        <a asp-page="/IPages/Category/Index" target="_blank" class="btn bg-gradient-warning btn-sm" style="">VIEW PAGE CATEGORIES</a>
        <a asp-page="/IPages/PreviewAll" target="_blank" class="btn bg-danger btn-sm" style="">VIEW ALL SECTION</a>
    </div>

    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].Title)
            </th>
                        <th>
                           Category
                        </th>
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].SortOrder)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.WebPage[0].Publish)
            </th>
            <th></th>
        </tr>
                </thead>

                @{
                    int sn = 0;
                }
    <tbody>
@foreach (var item in Model.WebPage) {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PageCategory.Title)
                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Publish)
            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="dropdown-item" asp-page="/IPages/Preview" asp-route-id="@item.Id">Preview</a>
                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
