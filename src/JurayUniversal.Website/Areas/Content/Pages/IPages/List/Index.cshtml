@page
@model JurayUniversal.Website.Areas.Content.Pages.IPages.List.IndexModel

@{
    ViewData["Title"] = "PAGE LIST";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">PAGE SECTION LIST</h3>


        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].VideoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].VideoKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].ImageKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].Disable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageSectionList[0].PageSection)
            </th>
            <th></th>
        </tr>
                </thead>

                @{
                    int sn = 0;
                }
    <tbody>
@foreach (var item in Model.PageSectionList) {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageSection.Description)
            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
