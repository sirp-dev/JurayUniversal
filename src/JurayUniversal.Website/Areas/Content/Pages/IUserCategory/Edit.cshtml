@page
@model JurayUniversal.Website.Areas.Content.Pages.IUserCategory.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE USER CATEGORY</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserCategory.Id" />
                    <div class="form-group">
                        <label asp-for="UserCategory.Title" class="control-label"></label>
                        <input asp-for="UserCategory.Title" class="form-control" />
                        <span asp-validation-for="UserCategory.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserCategory.Description" class="control-label"></label>
                        <input asp-for="UserCategory.Description" class="form-control" />
                        <span asp-validation-for="UserCategory.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="UserCategory.Publish" /> @Html.DisplayNameFor(model => model.UserCategory.Publish)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="UserCategory.ShowInMenu" /> @Html.DisplayNameFor(model => model.UserCategory.ShowInMenu)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="UserCategory.ShowInDashboard" /> @Html.DisplayNameFor(model => model.UserCategory.ShowInDashboard)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
