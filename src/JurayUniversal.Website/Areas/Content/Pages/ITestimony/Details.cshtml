@page
@model JurayUniversal.Website.Areas.Content.Pages.ITestimony.DetailsModel

@{
    ViewData["Title"] = "TESTIMONY Details";
    @if (User.Identity.IsAuthenticated && User.IsInRole("SubAdmin") || User.IsInRole("mSuperAdmin"))
    {
        Layout = "/Pages/Shared/Admin/_Main.cshtml";

    }
    else
    {
        Layout = "/Pages/Shared/Admin/_User.cshtml";

    }
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS TESTIMONY</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Testimony.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Testimony.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Testimony.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Testimony.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Testimony.SortOrder)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Testimony.SortOrder)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Testimony.Show)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Testimony.Show)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Testimony.ImageUrl)
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Model.Testimony.ImageUrl" class="img-fluid" style="max-height:120px" />
                     </dd>
                    
                </dl>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>

        </div>
    </div>
</div>
