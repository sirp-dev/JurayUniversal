@page
@model JurayUniversal.Website.Areas.Content.Pages.IProduct.Category.DeleteModel

@{
    ViewData["Title"] = string.Format("{0} Category delete", await Component.InvokeAsync("ProductTitle"));
    @if (User.Identity.IsAuthenticated && User.IsInRole("SubAdmin") || User.IsInRole("mSuperAdmin"))
    {
        Layout = "/Pages/Shared/Admin/_Main.cshtml";

    }
    else
    {
        Layout = "/Pages/Shared/Admin/_User.cshtml";

    }
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@await Component.InvokeAsync("ProductTitle") CATEGORY DELETE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductCategory.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductCategory.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductCategory.Publish)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductCategory.Publish)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductCategory.MenuSortOrder)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductCategory.MenuSortOrder)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductCategory.HomeSortFrom)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductCategory.HomeSortFrom)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="ProductCategory.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>
                    </form>
                </div>

            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>