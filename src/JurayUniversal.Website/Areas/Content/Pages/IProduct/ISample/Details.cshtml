@page
@model JurayUniversal.Website.Areas.Content.Pages.IProduct.ISample.DetailsModel

@{
    ViewData["Title"] = string.Format("{0} SAMPLE DETAILS", await Component.InvokeAsync("ProductTitle"));
    @if (User.Identity.IsAuthenticated && User.IsInRole("SubAdmin") || User.IsInRole("mSuperAdmin"))
    {
        Layout = "/Pages/Shared/Admin/_Main.cshtml";

    }
    else
    {
        Layout = "/Pages/Shared/Admin/_User.cshtml";

    }
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS @await Component.InvokeAsync("ProductTitle") SAMPLE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.VideoUrl)
                    </dt>
                    <dd class="col-sm-10">
                        <div class="form-group">
                            <label class="control-label">Previouse sample Video</label><br />
                            @if (!String.IsNullOrEmpty(Model.ProductSample.VideoUrl))
                            {
                                <div class=" ">
                                    <label class=" ">Previouse sample Video</label><br />
                                    <video width="" style="height:200px;" controls="controls">
                                        <source src="@Model.ProductSample.VideoUrl" type="video/mp4">
                                        Your browser does not support HTML5 video.
                                    </video>
                                </div>
                            }
                        </div>
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.VideoKey)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductSample.VideoKey)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.ImageUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @if (!String.IsNullOrEmpty(Model.ProductSample.ImageUrl))
                        {
                            <div class=" ">
                                <label class=" ">Previouse sample Image</label><br />
                                <img src="@Model.ProductSample.ImageUrl" class="img-fluid" style="max-height:150px;" />
                            </div>
                        }

                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.ImageKey)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductSample.ImageKey)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductSample.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductSample.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.FullDescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.ProductSample.FullDescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductSample.Product)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductSample.Product.FullDescription)
                    </dd>
                </dl>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>

        </div>
    </div>
</div>