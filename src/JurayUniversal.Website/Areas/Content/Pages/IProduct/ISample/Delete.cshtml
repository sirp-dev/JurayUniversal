@page
@model JurayUniversal.Website.Areas.Content.Pages.IProduct.ISample.DeleteModel

@{
    ViewData["Title"] = string.Format("{0} SAMPLE DELETE", await Component.InvokeAsync("ProductTitle"));
    @if (User.Identity.IsAuthenticated && User.IsInRole("SubAdmin") || User.IsInRole("mSuperAdmin"))
    {
        Layout = "/Pages/Shared/Admin/_Main.cshtml";

    }
    else
    {
        Layout = "/Pages/Shared/Admin/_User.cshtml";

    }
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE @await Component.InvokeAsync("ProductTitle") SAMPLE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>ProductSample</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.VideoUrl)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.VideoUrl)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.VideoKey)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.VideoKey)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.ImageUrl)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.ImageUrl)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.ImageKey)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.ImageKey)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.FullDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.FullDescription)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSample.Product)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSample.Product.FullDescription)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="ProductSample.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>
                    </form>
                </div>

            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>