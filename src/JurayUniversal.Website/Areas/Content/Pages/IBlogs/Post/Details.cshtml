@page
@model JurayUniversal.Website.Areas.Content.Pages.IBlogs.Post.DetailsModel

@{
    ViewData["Title"] = "BLOG Details";
    @if (User.Identity.IsAuthenticated && User.IsInRole("SubAdmin") || User.IsInRole("mSuperAdmin"))
    {
        Layout = "/Pages/Shared/Admin/_Main.cshtml";

    }
    else
    {
        Layout = "/Pages/Shared/Admin/_User.cshtml";

    }
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS BLOG POST</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.Publish)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.Publish)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.SortOrder)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.SortOrder)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.VideoUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.VideoUrl)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.VideoKey)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.VideoKey)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.ImageUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.ImageUrl)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.ImageKey)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.ImageKey)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.BlogCategory)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.BlogCategory.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.FullDescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.FullDescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Blog.AddToRibon)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Blog.AddToRibon)
                    </dd>
                </dl>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>

        </div>
    </div>
</div>