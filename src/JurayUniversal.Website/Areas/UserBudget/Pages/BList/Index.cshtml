@page
@model JurayUniversal.Website.Areas.UserBudget.Pages.BList.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BudgetList[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetList[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetList[0].BudgetSubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetList[0].AmountInNaira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetList[0].AmountInDollar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetList[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BudgetList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetSubCategory.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInNaira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInDollar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
