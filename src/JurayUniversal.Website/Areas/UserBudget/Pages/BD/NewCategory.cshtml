@page
@model JurayUniversal.Website.Areas.UserBudget.Pages.BD.NewCategoryModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW BUDGET CATEGORY  (@Model.BudgetMainCategory.Title)</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BudgetSubCategory.BudgetMainCategoryId" value="@Model.BudgetMainCategory.Id" />

                    <div class="form-group">
                        <label asp-for="BudgetSubCategory.Title" class="control-label"></label>
                        <input asp-for="BudgetSubCategory.Title" class="form-control" />
                        <span asp-validation-for="BudgetSubCategory.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BudgetSubCategory.Description" class="control-label"></label>
                        <textarea asp-for="BudgetSubCategory.Description" class="form-control"></textarea>
                        <span asp-validation-for="BudgetSubCategory.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="BudgetSubCategory.Show" /> @Html.DisplayNameFor(model => model.BudgetSubCategory.Show)
                        </label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
