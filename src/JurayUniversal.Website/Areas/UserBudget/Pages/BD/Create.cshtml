@page
@model JurayUniversal.Website.Areas.UserBudget.Pages.BD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW BUDGET</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BudgetMainCategory.Title" class="control-label"></label>
                        <input asp-for="BudgetMainCategory.Title" class="form-control" />
                        <span asp-validation-for="BudgetMainCategory.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BudgetMainCategory.Description" class="control-label"></label>
                        <textarea asp-for="BudgetMainCategory.Description" class="form-control summernote" ></textarea>
                        <span asp-validation-for="BudgetMainCategory.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="BudgetMainCategory.StartDate" class="control-label"></label>
                        <input asp-for="BudgetMainCategory.StartDate" class="form-control" />
                        <span asp-validation-for="BudgetMainCategory.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BudgetMainCategory.EndDate" class="control-label"></label>
                        <input asp-for="BudgetMainCategory.EndDate" class="form-control" />
                        <span asp-validation-for="BudgetMainCategory.EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BudgetMainCategory.Status" class="control-label"></label>
                        @Html.DropDownListFor(model => model.BudgetMainCategory.Status, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.ProposalStatus))), new { @class = "form-control" })
                        <span asp-validation-for="BudgetMainCategory.Status" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
