@page
@model JurayUniversal.Website.Areas.UserBudget.Pages.BD.BudgetModel
@{
}

<div class="card">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">



                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">BUDGET</h3> 

                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Title</th>

                                    <td>@Model.BudgetMainCategory.Title</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>@Model.BudgetMainCategory.Status</td>
                                </tr>

                                <tr>
                                    <th>Start</th>

                                    <td>@Model.BudgetMainCategory.StartDate.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <th>End</th>

                                    <td>@Model.BudgetMainCategory.EndDate.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <th>Budget In Naira</th>

                                    <td>@await Component.InvokeAsync("BudgetNairaSum", new { id = Model.BudgetMainCategory.Id })</td>
                                </tr>
                                <tr>
                                    <th>Budget In Dollar</th>

                                    <td>@await Component.InvokeAsync("BudgetDollarSum", new { id = Model.BudgetMainCategory.Id })</td>
                                </tr>

                                <tr>
                                    <th>Full Description</th>

                                    <td>
                                        <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#projectDescription">Read Full Description</button>

                                    </td>
                                </tr>

                            </table>

                        </div>
                        <!-- /.card-body -->
                    </div>

                    <div class="row juray-card-section">
                        <div class="col-md-12">
                            <div class="card card-success">
                                <div class="card-header">
                                    <h3 class="card-title">BUDGET DETAILS</h3>

                                </div>
                                <div class="card-body">
                                    @await Component.InvokeAsync("BudgetPreview", new { id = Model.BudgetMainCategory.Id })

                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>

                    </div>

                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Trigger the modal with a button -->
<!-- Modal -->
<div id="projectDescription" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">FULL DESCRITION OF THE BUDGET</h4>
            </div>
            <div class="modal-body">
                @Html.Raw(Model.BudgetMainCategory.Description)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>