@page
@model JurayUniversal.Website.Areas.Admin.Pages.IProposalPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE REPORT</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Proposal.Id" />
                    <input type="hidden" asp-for="Proposal.Date" />
                    <div class="form-group">
                        <label asp-for="Proposal.SubmittedById" class="control-label"></label>
                        <select asp-for="Proposal.SubmittedById" class="form-control" asp-items="ViewBag.SubmittedById"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Proposal.DateSubmitted" class="control-label"></label>
                        <input asp-for="Proposal.DateSubmitted" class="form-control" />
                        <span asp-validation-for="Proposal.DateSubmitted" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.DateApproved" class="control-label"></label>
                        <input asp-for="Proposal.DateApproved" class="form-control" />
                        <span asp-validation-for="Proposal.DateApproved" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.Title" class="control-label"></label>
                        <input asp-for="Proposal.Title" class="form-control" />
                        <span asp-validation-for="Proposal.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.Description" class="control-label"></label>
                        <textarea asp-for="Proposal.Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Proposal.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.Address" class="control-label"></label>
                        <textarea asp-for="Proposal.Address" class="form-control "></textarea>
                        <span asp-validation-for="Proposal.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.Note" class="control-label"></label>
                        <textarea asp-for="Proposal.Note" class="form-control summernote"></textarea>
                        <span asp-validation-for="Proposal.Note" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.TypedProposal" class="control-label"></label>
                        <textarea asp-for="Proposal.TypedProposal" class="form-control summernote"></textarea>
                        <span asp-validation-for="Proposal.TypedProposal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Proposal.ProposalStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Proposal.ProposalStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.ProposalStatus))), new { @class = "form-control" })
                        <span asp-validation-for="Proposal.ProposalStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
