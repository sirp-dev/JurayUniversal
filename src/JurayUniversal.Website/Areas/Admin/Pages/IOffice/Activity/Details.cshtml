@page
@model JurayUniversal.Website.Areas.Admin.Pages.IOffice.Activity.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">OFFICE ACTIVITY</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OfficeActivityDialy.OfficeActivityCategory)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OfficeActivityDialy.OfficeActivityCategory.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OfficeActivityDialy.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.OfficeActivityDialy.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OfficeActivityDialy.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OfficeActivityDialy.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OfficeActivityDialy.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OfficeActivityDialy.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OfficeActivityDialy.LastUpdate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OfficeActivityDialy.LastUpdate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OfficeActivityDialy.LastUpdateBy)
                    </dt>
                    <dd class="col-sm-10">

                        @Html.DisplayFor(model => model.OfficeActivityDialy.LastUpdateBy.FullnameX)

                    </dd>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("mSuperAdmin"))
                    {
                        <dt class="col-sm-2">
                            ==========
                        </dt>
                        <dd class="col-sm-10">
                            ======
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OfficeActivityDialy.LastUpdate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.OfficeActivityDialy.LastUpdate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OfficeActivityDialy.Logs)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.OfficeActivityDialy.Logs)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OfficeActivityDialy.UpdateCount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.OfficeActivityDialy.UpdateCount)
                        </dd>
                    }
                </dl>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.OfficeActivityDialy.Id">Edit</a>
            </div>
        </div>
    </div>
</div>
