@page
@model JurayUniversal.Website.Areas.Admin.Pages.ITraining.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE TRAINING</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Training.Id" />
                    <input type="hidden" asp-for="Training.DocumentKey" />
                    <input type="hidden" asp-for="Training.DocumentUrl" />
            <div class="form-group">
                <label asp-for="Training.Topic" class="control-label"></label>
                <input asp-for="Training.Topic" class="form-control" />
                <span asp-validation-for="Training.Topic" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Training.StartTime" class="control-label"></label>
                <input asp-for="Training.StartTime" class="form-control" />
                <span asp-validation-for="Training.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.CloseTime" class="control-label"></label>
                <input asp-for="Training.CloseTime" class="form-control" />
                <span asp-validation-for="Training.CloseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.QuestionsAndAnswers" class="control-label"></label>
                <input asp-for="Training.QuestionsAndAnswers" class="form-control" />
                <span asp-validation-for="Training.QuestionsAndAnswers" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="Training.ModeratorId" class="control-label"></label>
                        <select asp-for="Training.ModeratorId" class="form-control" asp-items="ViewBag.ModeratorId"></select>
                        <span asp-validation-for="Training.ModeratorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.TrainnerId" class="control-label"></label>
                <select asp-for="Training.TrainnerId" class="form-control" asp-items="ViewBag.TrainnerId"></select>
                <span asp-validation-for="Training.TrainnerId" class="text-danger"></span>
            </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
