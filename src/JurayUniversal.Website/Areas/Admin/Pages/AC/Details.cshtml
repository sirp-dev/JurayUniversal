@page
@model JurayUniversal.Website.Areas.Admin.Pages.AC.DetailsModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS </h3>
        <h2>@Model.UserDatas.GetFullName()</h2>
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">

 

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.PhoneNumber)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.AltPhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.AltPhoneNumber)
                    </dd>


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Email)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.OfficeEmail)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.OfficeEmail)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PermanentHomeAddress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.PermanentHomeAddress)
                    </dd>




                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PermanentLga)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.PermanentLga)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PermanentState)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.PermanentState)
                    </dd>


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Address)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Address)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.City)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.City)
                    </dd>




                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.State)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.State)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Country)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Country)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.DateOfBirth)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.UserDatas.DateOfBirth != null)
                        {
                            @Model.UserDatas.DateOfBirth.Value.Date

                        }
                    </dd>




                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Date)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Gender)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Gender)
                    </dd>




                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.MaritalStatus)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.MaritalStatus)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Biography)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.UserDatas.Biography)
                    </dd>




                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PassportFilePathUrl)
                    </dt>
                    <dd class="col-sm-10">

                        <img src="@Model.UserDatas.PassportFilePathUrl" style="max-height:200px;" />

                    </dd>



                    @*<dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.CVFilePathUrl)
                    </dt>
                    <dd class="col-sm-10">
                        <a href="@Model.UserDatas.CVFilePathUrl" download="@Model.UserDatas.GetFullName()">Download CV</a>
                    </dd>*@

                </dl>
                <div>
                    @if(Model.AdditionalProfile.Count()> 0) { 
                    <h4>Additional Information</h4>
                    <dl>
                        @foreach (var item in Model.AdditionalProfile)
                        {

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => item.Title)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => item.Title)
                            </dd>


                        }
                    </dl>
                    }
                </div>
                <div>
                    @foreach (var item in Model.ProfileCategories)
                    {
                        <h4>@item.Title</h4>
                        <dl>
                            @foreach (var list in item.ProfileCategoryLists)
                            {

                                @if (!String.IsNullOrEmpty(list.Title))
                                {
                                    <dt class="col-sm-2">
                                        Title
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Title
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.Description))
                                {
                                    <dt class="col-sm-2">
                                        Description
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Description
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.Employer))
                                {
                                    <dt class="col-sm-2">
                                        Employer
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Employer
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.Honours))
                                {
                                    <dt class="col-sm-2">
                                        Honours
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Honours
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.Qualification))
                                {
                                    <dt class="col-sm-2">
                                        Qualification
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Qualification
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.FieldOfStudy))
                                {
                                    <dt class="col-sm-2">
                                        FieldOfStudy
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.FieldOfStudy
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.City))
                                {
                                    <dt class="col-sm-2">
                                        City
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.City
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.Country))
                                {
                                    <dt class="col-sm-2">
                                        Country
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Country
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.Percentage))
                                {
                                    <dt class="col-sm-2">
                                        Percentage
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.Percentage
                                    </dd>
                                }
                                @if (!String.IsNullOrEmpty(list.StartDate))
                                {
                                    <dt class="col-sm-2">
                                        Start Date
                                    </dt>
                                    <dd class="col-sm-10">
                                        @list.StartDate
                                    </dd>
                                }
                                @if (list.Currently == false)
                                {
                                    @if (!String.IsNullOrEmpty(list.EndDate))
                                    {
                                        <dt class="col-sm-2">
                                            EndDate
                                        </dt>
                                        <dd class="col-sm-10">
                                            @list.EndDate
                                        </dd>
                                    }
                                }
                                else
                                {
                                     
                                        <dt class="col-sm-2">
                                            Status
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => list.Currently)
                                        </dd>
                                     
                                }

                            }
                        </dl>
                    }
                </div>

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
         </div>
    </div>
</div>