@page
@model JurayUniversal.Website.Areas.Admin.Pages.AC.NewUserModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE USER</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserDatas.Title" class="control-label"></label>
                        <input asp-for="UserDatas.Title" class="form-control" />
                        <span asp-validation-for="UserDatas.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserDatas.FirstName" class="control-label"></label>
                        <input asp-for="UserDatas.FirstName" class="form-control" />
                        <span asp-validation-for="UserDatas.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserDatas.MiddleName" class="control-label"></label>
                        <input asp-for="UserDatas.MiddleName" class="form-control" />
                        <span asp-validation-for="UserDatas.MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserDatas.LastName" class="control-label"></label>
                        <input asp-for="UserDatas.LastName" class="form-control" />
                        <span asp-validation-for="UserDatas.LastName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="UserDatas.PhoneNumber" class="control-label"></label>
                        <input asp-for="UserDatas.PhoneNumber" class="form-control" />
                        <span asp-validation-for="UserDatas.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDatas.Email" class="control-label"></label>
                        <input asp-for="UserDatas.Email" class="form-control" />
                        <span asp-validation-for="UserDatas.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
