@page
@model JurayUniversal.Website.Areas.Admin.Pages.IProject.IndexModel

@{
    ViewData["Title"] = "Users";
}
 
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>

        <div class="card-tools">
            <div class="pagination pagination-sm float-right" style="margin-right: 10px;">
                <a onclick="jQueryModalGet('?handler=CreateOrEdit','Create @ViewData["Title"]')" class="btn bg-success" style="margin:4px;">
                    Create
                </a>
                <a id="reload" class="btn bg-warning" style="margin:4px;">
                    Reload
                </a>
                <a asp-page="./Deleted" class="btn bg-danger" style="margin:4px;">
                    Deleted Users
                </a>
            </div>
        </div>
    </div>
    
    <div id="viewAll" class="card-body table-responsive"></div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#viewAll').load('?handler=ViewAllPartial');
             
        });
        $(function () {
            $('#reload').on('click', function () {
                $('#viewAll').load('?handler=ViewAllPartial');
                $('#loading-spinner').show();
                toastr.success('success')
            });
        });
    </script>
}