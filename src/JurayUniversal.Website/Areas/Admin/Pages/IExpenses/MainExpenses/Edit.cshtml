@page
@model JurayUniversal.Website.Areas.Admin.Pages.IExpenses.MainExpenses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE EXPENES</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompayExpenses.Id" />
            <div class="form-group">
                <label asp-for="CompayExpenses.UserId" class="control-label"></label>
                <select asp-for="CompayExpenses.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="CompayExpenses.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.Note" class="control-label"></label>
                <input asp-for="CompayExpenses.Note" class="form-control" />
                <span asp-validation-for="CompayExpenses.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.Amount" class="control-label"></label>
                <input asp-for="CompayExpenses.Amount" class="form-control" />
                <span asp-validation-for="CompayExpenses.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.ExpensesCategoryId" class="control-label"></label>
                <select asp-for="CompayExpenses.ExpensesCategoryId" class="form-control" asp-items="ViewBag.ExpensesCategoryId"></select>
                <span asp-validation-for="CompayExpenses.ExpensesCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.Date" class="control-label"></label>
                <input asp-for="CompayExpenses.Date" class="form-control" />
                <span asp-validation-for="CompayExpenses.Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CompayExpenses.ApprovedByManager" /> @Html.DisplayNameFor(model => model.CompayExpenses.ApprovedByManager)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.ManagerNote" class="control-label"></label>
                <input asp-for="CompayExpenses.ManagerNote" class="form-control" />
                <span asp-validation-for="CompayExpenses.ManagerNote" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CompayExpenses.ApprovedByCEO" /> @Html.DisplayNameFor(model => model.CompayExpenses.ApprovedByCEO)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.CeoNote" class="control-label"></label>
                <input asp-for="CompayExpenses.CeoNote" class="form-control" />
                <span asp-validation-for="CompayExpenses.CeoNote" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CompayExpenses.ApprovedByCFO" /> @Html.DisplayNameFor(model => model.CompayExpenses.ApprovedByCFO)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CompayExpenses.CfoNote" class="control-label"></label>
                <input asp-for="CompayExpenses.CfoNote" class="form-control" />
                <span asp-validation-for="CompayExpenses.CfoNote" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
