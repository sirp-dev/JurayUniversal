@page
@model JurayUniversal.Website.Areas.Admin.Pages.IRequest.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW CLIENT REQUEST</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientRequest.Name" class="control-label"></label>
                <input asp-for="ClientRequest.Name" class="form-control" />
                <span asp-validation-for="ClientRequest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientRequest.Phone" class="control-label"></label>
                <input asp-for="ClientRequest.Phone" class="form-control" />
                <span asp-validation-for="ClientRequest.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientRequest.Email" class="control-label"></label>
                <input asp-for="ClientRequest.Email" class="form-control" />
                <span asp-validation-for="ClientRequest.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientRequest.Message" class="control-label"></label>
                <input asp-for="ClientRequest.Message" class="form-control" />
                <span asp-validation-for="ClientRequest.Message" class="text-danger"></span>
            </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
