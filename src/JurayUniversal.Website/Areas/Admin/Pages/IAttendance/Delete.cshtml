@page
@model JurayUniversal.Website.Areas.Admin.Pages.IAttendance.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE ATTENANCE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Are you sure you want to delete this?</h3>
                <div>

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Attendance.User)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Attendance.User.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Attendance.StartTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Attendance.StartTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Attendance.CloseTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Attendance.CloseTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Attendance.Note)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Attendance.Note)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Attendance.AttendanceStatus)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Attendance.AttendanceStatus)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Attendance.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>
                    </form>
                </div>

            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>