@page
@model JurayUniversal.Website.Areas.Admin.Pages.IAttendance.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW ATTENANCE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Attendance.UserId" class="control-label"></label>
                <select asp-for="Attendance.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.StartTime" class="control-label"></label>
                <input asp-for="Attendance.StartTime" class="form-control" />
                <span asp-validation-for="Attendance.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.CloseTime" class="control-label"></label>
                <input asp-for="Attendance.CloseTime" class="form-control" />
                <span asp-validation-for="Attendance.CloseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.Note" class="control-label"></label>
                <input asp-for="Attendance.Note" class="form-control" />
                <span asp-validation-for="Attendance.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.AttendanceStatus" class="control-label"></label>
                <select asp-for="Attendance.AttendanceStatus" class="form-control"></select>
                <span asp-validation-for="Attendance.AttendanceStatus" class="text-danger"></span>
            </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
