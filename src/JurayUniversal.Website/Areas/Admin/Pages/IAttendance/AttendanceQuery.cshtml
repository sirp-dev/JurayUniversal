@page
@model JurayUniversal.Website.Areas.Admin.Pages.IAttendance.AttendanceQueryModel

@{
    ViewData["Title"] = "AttendanceQuery";
}

<h1>AttendanceQuery</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].CloseTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].AttendanceStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attendance[0].ClosePeriodStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Attendance) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosePeriodStatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
