@page
@model JurayUniversal.Website.Areas.Admin.Pages.IAttendance.UpdateTimeModel

@{
    ViewData["Title"] = "UpdateTime";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE ATTENANCE TIME</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Attendance.Id" />
                    <input type="hidden" asp-for="Attendance.UserId" />
                    <input type="hidden" asp-for="Attendance.Date" />
                    <input type="hidden" asp-for="Attendance.Id" />
         
            <div class="form-group">
                <label asp-for="Attendance.StartTime" class="control-label"></label>
                <input asp-for="Attendance.StartTime" class="form-control" />
                <span asp-validation-for="Attendance.StartTime" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <label asp-for="Attendance.ArivalPeriodStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Attendance.ArivalPeriodStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.PeriodStatus))), new { @class = "form-control" })
                        <span asp-validation-for="Attendance.ArivalPeriodStatus" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <label asp-for="Attendance.CloseTime" class="control-label"></label>
                <input asp-for="Attendance.CloseTime" class="form-control" />
                <span asp-validation-for="Attendance.CloseTime" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <label asp-for="Attendance.ClosePeriodStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Attendance.ClosePeriodStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.PeriodStatus))), new { @class = "form-control" })
                        <span asp-validation-for="Attendance.ClosePeriodStatus" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <label asp-for="Attendance.Note" class="control-label"></label>
                <textarea asp-for="Attendance.Note" class="form-control" ></textarea>
                <span asp-validation-for="Attendance.Note" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Manager") || User.IsInRole("mSuperAdmin"))
{
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
}
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
