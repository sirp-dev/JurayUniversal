@page
@model JurayUniversal.Website.Areas.Admin.Pages.IJob.IPlan.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">PLAN LIST</h3>


        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example3" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Plan[0].Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Plan[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Plan[0].JobCategory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Plan[0].ForPrivate)
                        </th>
                        <td>
                            @Html.DisplayNameFor(model => model.Plan[0].Disable)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.Plan[0].Compulsory)
                        </td>
                        <th>Days</th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Plan)
                    {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobCategory.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ForPrivate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Compulsory)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DaysToComplete)
                            </td>


                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>

                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
