@page
@model JurayUniversal.Website.Areas.Admin.Pages.IJob.ICategoryPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE JOB CATEGORY</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobCategory.Id" />
            <div class="form-group">
                <label asp-for="JobCategory.Title" class="control-label"></label>
                <input asp-for="JobCategory.Title" class="form-control" />
                <span asp-validation-for="JobCategory.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCategory.Description" class="control-label"></label>
                        <textarea asp-for="JobCategory.Description" class="form-control" ></textarea>
                <span asp-validation-for="JobCategory.Description" class="text-danger"></span>
            </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="JobCategory.Private" /> @Html.DisplayNameFor(model => model.JobCategory.Private)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="JobCategory.Private" /> @Html.DisplayNameFor(model => model.JobCategory.Private)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
