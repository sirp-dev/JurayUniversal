            <div class="card-footer">
                <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
                <a asp-page="./UpdateUserPermission" asp-route-uid="@Model.UserDatas.Id" asp-route-fullname="@Model.UserDatas.GetFullName()" class="btn btn-danger btn-sm">Update Role</a>
                @if (User.IsInRole("mSuperAdmin"))
                {
                    <a asp-page="./UpdateUserPermissionAdmin" asp-route-uid="@Model.UserDatas.Id" asp-route-fullname="@Model.UserDatas.GetFullName()" class="btn btn-danger btn-sm">Update Admin Role</a>

                }
                <a asp-page="./UpdateEmail" asp-route-uid="@Model.UserDatas.Id" class="btn btn-danger btn-sm">Update Email</a>
                <a asp-page="./UpdatePassword" asp-route-uid="@Model.UserDatas.Id" class="btn btn-danger btn-sm">Update Password</a>

                <form method="post" enctype="multipart/form-data">
                    <input asp-for="EmailData" hidden="hidden" value="@Model.UserDatas.Email" />
                    <input type="submit" value="Validate User Attendance and Report" class="btn btn-primary" style="margin-top:20px;" />
                </form>
