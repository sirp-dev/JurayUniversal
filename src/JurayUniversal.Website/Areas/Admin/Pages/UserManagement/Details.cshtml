                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <span>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </span>

                                                            </div>

                                                        }

                                                    </div>}


                                                @if (item.Title.ToUpper().Contains("INTEREST"))
                                                {
                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <span>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

