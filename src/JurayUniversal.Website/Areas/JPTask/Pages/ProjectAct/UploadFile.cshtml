@page
@model JurayUniversal.Website.Areas.JPTask.Pages.ProjectAct.UploadFileModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW Project File</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="XProjectFile.XProjectId" value="@Model.TaskId" />



                    <div class="form-group">
                        <label asp-for="XProjectFile.Title" class="control-label">Title</label>
                        <input asp-for="XProjectFile.Title" class="form-control" />
                        <span asp-validation-for="XProjectFile.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProjectFile.Description" class="control-label">Description/Note</label>
                        <textarea asp-for="XProjectFile.Description" class="form-control"></textarea>
                        <span asp-validation-for="XProjectFile.Description" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label class="control-label">File</label><br />
                        <input type="file" class="control-label" asp-for="imagefile" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./DetailTask" asp-route-id="@Model.TaskId" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
