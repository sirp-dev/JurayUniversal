@page
@model JurayUniversal.Website.Areas.JPTask.Pages.ProjectAct.CreateModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW PROJECT</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="XProject.Title" class="control-label"></label>
                        <input asp-for="XProject.Title" class="form-control" />
                        <span asp-validation-for="XProject.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProject.Description" class="control-label"></label>
                        <textarea asp-for="XProject.Description" class="form-control"></textarea>
                        <span asp-validation-for="XProject.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProject.FullDescription" class="control-label"></label>
                        <textarea asp-for="XProject.FullDescription" class="form-control summernote"></textarea>
                        <span asp-validation-for="XProject.FullDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="XProject.StartDate" class="control-label"></label>
                        <input asp-for="XProject.StartDate" class="form-control" />
                        <span asp-validation-for="XProject.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProject.DateToStartTesting" class="control-label"></label>
                        <input asp-for="XProject.DateToStartTesting" class="form-control" />
                        <span asp-validation-for="XProject.DateToStartTesting" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProject.DateToGoLive" class="control-label"></label>
                        <input asp-for="XProject.DateToGoLive" class="form-control" />
                        <span asp-validation-for="XProject.DateToGoLive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProject.Priority" class="control-label"></label>
                        @Html.DropDownListFor(model => model.XProject.Priority, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.Priority))), new { @class = "form-control" })
                        <span asp-validation-for="XProject.Priority" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="XProject.Priority" class="control-label"></label>
                        @Html.DropDownListFor(model => model.XProject.ProjectStatus, new SelectList(Enum.GetValues(typeof(JurayUniversal.Domain.Enum.Enum.ProjectStatus))), new { @class = "form-control" })
                        <span asp-validation-for="XProject.Priority" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
