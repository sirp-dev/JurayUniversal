@model JurayUniversal.Application.Dtos.PortfolioNameAndImageDto

@{

}
<nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
    <div class="container">
        <a href="@Model.Website/IPortfolio/Account/Dashboard" class="navbar-brand">

            @if (!String.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="@Model.Fullname" class="brand-image img-circle elevation-3" style="opacity: .8;max-height:50px;">

            }
            else
            {
                <img src="~/dashboard/dist/img/avatar5.png" alt="@Model.Fullname" class="brand-image img-circle elevation-3" style="opacity: .8;max-height:50px;">

            }

            <span class="brand-text font-weight-light"></span>
        </a>

        <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse order-3" id="navbarCollapse">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="@Model.Website/IPortfolio/Account/Dashboard" class="nav-link">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a href="@Model.Website" class="nav-link">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">CV</a>
                </li>
                <li class="nav-item dropdown">
                    <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Settings</a>
                    <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                        <li><a href="#" class="dropdown-item">Templates </a></li>
                        <li><a href="#" class="dropdown-item">Contact Me</a></li>
                        <li><a href="#" class="dropdown-item">Settings</a></li>

                    </ul>
                </li>
            </ul>

        </div>

        <!-- Right navbar links -->
        <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
            <!-- Messages Dropdown Menu -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="fas fa-comments"></i>
                    <span class="badge badge-danger navbar-badge">@Model.ContactMeCount</span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    @foreach (var msg in Model.PortfolioContactUs)
                    {
                        <a href="#" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        @msg.Email
                                        <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                                    </h3>
                                    <p class="text-sm">@msg.Subject</p>
                                    <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> @msg.Date</p>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                        <div class="dropdown-divider"></div>
                    }
                    <a href="#" class="dropdown-item dropdown-footer">See All Messages</a>
                </div>
            </li>

        </ul>
    </div>
</nav>


<div class="">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 uppercase"> Welcome Back! @Model.Fullname</h1>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
</div>

